{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
			"@/components/*": ["src/components/*"],
			"@/containers/*": ["src/containers/*"],						
			"@/pages/*": ["src/pages/*"],
			"@/styles/*": ["src/styles/*"],
			"@/theme/*": ["src/theme/*"],
			"@/helpers/*": ["src/helpers/*"],			
			"@/atoms/*": ["src/components/atoms/*"],
			"@/molecules/*": ["src/components/molecules/*"],			
			"@/organisms/*": ["src/containers/organisms/*"],			
			"@/types/*": ["src/types/*"],			
			"@/mocks/*": ["src/mocks/*"],
      "@/core/*": ["src/core/*"]
		},
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/styles/global/Fonts.style.js"
  ],
  "exclude": ["node_modules"]
}
